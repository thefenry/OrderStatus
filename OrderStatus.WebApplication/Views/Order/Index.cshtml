
@{
    ViewBag.Title = "Orders";
}
<script src="~/Scripts/Index/app.js"></script>
<script src="~/Scripts/Index/OrderController.js"></script>
<script src="~/Scripts/Index/Directives/Drag&DropDirectives.js"></script>
<h2>Orders</h2>
<div ng-app="OrderApp">
    <div ng-controller="OrderController" class="row">
        <div drop-target class="col-sm-4" container="NewOrders" style="min-height: 500px;">
            <h1>New Order</h1>
            <div ng-repeat="order in NewOrders">
                <div draggable="true" itemid="{{order.ID}}" ng-click="openModal(order.ID)" style="border:1px #e2e2e2 solid;">
                    <h2>{{order.Description}}</h2>
                    <p>
                        Client: {{order.ClientName}}
                    </p>
                    <p>
                        Contact: {{order.Phone}}
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-4" drop-target container="ActiveOrders" style="min-height: 500px;">
            <h1>Started Processing</h1>
            <div ng-repeat="order in ActiveOrders">
                <div draggable="true" itemid="{{order.ID}}" ng-click="openModal(order.ID)" style="border:1px #e2e2e2 solid;">
                    <h2>{{order.Description}}</h2>
                    <p>
                        Client: {{order.ClientName}}
                    </p>
                    <p>
                        Contact: {{order.Phone}}
                    </p>
                </div>
            </div>
        </div>
        <div class="col-sm-4" drop-target container="CompletedOrders" style="min-height: 500px;">
            <h1>Completed Order</h1>
            <div ng-repeat="order in CompletedOrders">
                <div draggable="true" itemid="{{order.ID}}" ng-click="openModal(order.ID)" style="border:1px #e2e2e2 solid;">
                    <h2>{{order.Description}}</h2>
                    <p>
                        Client: {{order.ClientName}}
                    </p>
                    <p>
                        Contact: {{order.Phone}}
                    </p>
                </div>
            </div>
        </div>


        @*Modal container*@
        <!-- The Modal -->
        <div id="myModal" class="modal">

            <!-- Modal content -->
            <div class="modal-content">
                <span class="close">x</span>
                <form>
                    <h2>Order Details</h2>
                    <div>
                        <label for="Description">Description</label>
                        <input id="Description" type="text" value="{{detail.Description}}" />
                    </div>
                    <div>
                        <label for="ClientName">Client</label>
                        <input id="ClientName" type="text" value="{{detail.ClientName}}" />
                    </div>
                    <div>
                        <label for="Phone">Phone</label>
                        <input id="Phone" type="tel" value="{{detail.Phone}}" />
                    </div>
                    <div>
                        <label for="Address">Address</label>
                        <input id="Address" type="text" value="{{detail.Address}}" />
                    </div>
                    <div>
                        <label for="Image">Image</label>
                        <input id="Image" type="text" value="{{detail.Image}}" />
                    </div>
                    <div>                        
                        <input type="button" value="Update" />
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>



